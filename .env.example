S3_BUCKET=wafer-maps

# Local Storage
DATA_DIR=/data
MODELS_DIR=/models

# Kubernetes Configuration (optional)
KUBE_NAMESPACE=default
GPU_NODE_SELECTOR=nvidia.com/gpu=true

# Training Configuration
DEFAULT_BATCH_SIZE=32
DEFAULT_LEARNING_RATE=0.001
DEFAULT_EPOCHS=100

# Active Learning Configuration
AL_UNCERTAINTY_WEIGHT=0.6
AL_DIVERSITY_WEIGHT=0.4
